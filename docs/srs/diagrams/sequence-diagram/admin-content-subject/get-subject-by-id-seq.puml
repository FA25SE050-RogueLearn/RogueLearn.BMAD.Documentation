@startuml
actor Admin
participant ":SubjectsController" as Controller
participant ":IMediator" as Med
participant ":GetSubjectByIdHandler" as Handler
participant ":ISubjectRepository" as Repo
database ":Database" as DB

Admin -> Controller : GET /api/admin/subjects/{id}
activate Controller

Controller -> Med : Send(GetSubjectByIdQuery)
activate Med

Med -> Handler : Handle(query)
activate Handler

Handler -> Repo : GetByIdAsync(Id)
activate Repo
Repo -> DB : SELECT * FROM subjects...
DB --> Repo : Subject?
deactivate Repo

alt Not Found
    Handler --> Med : null
    Med --> Controller : 404 Not Found
else Found
    Handler -> Handler : Map to DTO
    Handler --> Med : SubjectDto
    Med --> Controller : 200 OK
end

deactivate Handler
deactivate Med
deactivate Controller
@enduml