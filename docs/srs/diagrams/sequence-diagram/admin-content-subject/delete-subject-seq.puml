@startuml
actor Admin
participant AdminManagementUI as UI
participant ":SubjectsController" as Controller
participant ":IMediator" as Med
participant ":DeleteSubjectHandler" as Handler
participant ":ISubjectRepository" as IRepo
participant ":SubjectRepository" as Repo
database ":Database" as DB

Admin -> UI : Click "Delete Subject" & Confirm
activate UI

UI -> Controller : DELETE /api/admin/subjects/{id}
activate Controller

Controller -> Med : Send(DeleteSubjectCommand)
activate Med

Med -> Handler : Handle(command)
activate Handler

Handler -> IRepo : GetByIdAsync(Id)
activate IRepo
IRepo -> Repo : GetByIdAsync(Id)
activate Repo
Repo -> DB : SELECT * FROM subjects...
activate DB
DB --> Repo : Subject?
deactivate DB
Repo --> IRepo : Subject?
deactivate Repo
IRepo --> Handler : Subject?
deactivate IRepo

alt Not Found
    Handler --> Med : Throw NotFoundException
else Found
    Handler -> IRepo : DeleteAsync(Id)
    activate IRepo
    IRepo -> Repo : DeleteAsync(Id)
    activate Repo
    Repo -> DB : DELETE FROM subjects...
    activate DB
    DB --> Repo : Success
    deactivate DB
    Repo --> IRepo : Success
    deactivate Repo
    IRepo --> Handler : Success
    deactivate IRepo
    
    Handler --> Med : Unit.Value
end

deactivate Handler
Med --> Controller : Success
deactivate Med

Controller --> UI : 204 No Content
deactivate Controller

UI -> UI : Remove Item from List
UI --> Admin : Show "Subject Deleted" Success
deactivate UI
@enduml