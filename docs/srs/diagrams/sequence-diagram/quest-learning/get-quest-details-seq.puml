' get-quest-details-seq.puml
@startuml
actor Student
participant "QuestsController" as Controller
participant "GetQuestById\nHandler" as Handler
participant "QuestRepository" as Q_Repo
participant "QuestStepRepository" as QS_Repo

Student -> Controller : GET /api/quests/{id}
Controller -> Handler : Handle(GetQuestByIdQuery)

activate Handler
    Handler -> Q_Repo : GetByIdAsync(id)
    alt Not Found
        Handler --> Controller : null
        Controller --> Student : 404 Not Found
    else Found
        Handler -> QS_Repo : FindAsync(q => q.QuestId == id)
        Handler -> Handler : Map to DTO
        Handler --> Controller : QuestDetailsDto
        Controller --> Student : 200 OK
    end
deactivate Handler
@enduml