@startuml
actor Admin
participant ":AdminSkillsController" as Controller
participant ":IMediator" as Med
participant ":UpdateSkill\nCommandHandler" as Handler
participant ":ISkillRepository" as Repo
database ":Database" as DB

Admin -> Controller : PUT /api/admin/skills/{id}
activate Controller

Controller -> Med : Send(UpdateSkillCommand)
activate Med

Med -> Handler : Handle(command)
activate Handler

' 1. Fetch
Handler -> Repo : GetByIdAsync(Id)
activate Repo
Repo -> DB : SELECT *...
DB --> Repo : Skill?
deactivate Repo

alt Not Found
    Handler --> Med : Throw NotFoundException
else Found
    ' 2. Update
    Handler -> Handler : Update Properties
    Handler -> Repo : UpdateAsync(Skill)
    activate Repo
    Repo -> DB : UPDATE skills...
    DB --> Repo : Success
    deactivate Repo
    
    Handler --> Med : UpdateSkillResponse
end

deactivate Handler
Med --> Controller : Response
deactivate Med

Controller --> Admin : 200 OK
deactivate Controller
@enduml