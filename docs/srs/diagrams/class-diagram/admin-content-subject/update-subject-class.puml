' update-subject-class.puml
@startuml
skinparam linetype ortho
skinparam ranksep 50
skinparam nodesep 50
skinparam classAttributeIconSize 0
hide empty members

package "API Layer" {
    class SubjectsController {
        +UpdateSubject(id, command)
    }
}

package "Application Layer" {
    class UpdateSubjectCommand {
        +Id
        +SubjectCode
        +SubjectName
        +Credits
    }

    class UpdateSubjectHandler {
        +Handle(command)
    }
}

package "Domain & Infrastructure Layer" {
    interface ISubjectRepository
    class Subject
}

SubjectsController ..> UpdateSubjectCommand : Creates
SubjectsController ..> UpdateSubjectHandler : Sends

UpdateSubjectHandler ..> UpdateSubjectCommand : Uses
UpdateSubjectHandler --> ISubjectRepository
UpdateSubjectHandler ..> Subject : Updates
@enduml