' create-subject-class.puml
@startuml
skinparam linetype ortho
skinparam ranksep 50
skinparam nodesep 50
skinparam classAttributeIconSize 0
hide empty members

package "API Layer" {
    class SubjectsController {
        +CreateSubject(command)
    }
}

package "Application Layer" {
    class CreateSubjectCommand {
        +SubjectCode
        +SubjectName
        +Credits
        +Description
    }

    class CreateSubjectHandler {
        +Handle(command)
    }
}

package "Domain & Infrastructure Layer" {
    interface ISubjectRepository
    class Subject
}

SubjectsController ..> CreateSubjectCommand : Creates
SubjectsController ..> CreateSubjectHandler : Sends

CreateSubjectHandler ..> CreateSubjectCommand : Uses
CreateSubjectHandler --> ISubjectRepository
CreateSubjectHandler ..> Subject : Creates
@enduml