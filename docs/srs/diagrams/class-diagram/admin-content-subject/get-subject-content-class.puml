' get-subject-content-class.puml
@startuml
skinparam linetype ortho
skinparam ranksep 50
skinparam nodesep 50
skinparam classAttributeIconSize 0
hide empty members

package "API Layer" {
    class SubjectContentEditorController {
        +GetSubjectContent(subjectId)
    }
}

package "Application Layer" {
    class GetSubjectContentQuery {
        +SubjectId
    }

    class GetSubjectContentQueryHandler {
        +Handle(query)
    }
    
    class SyllabusContent {
        +SessionSchedule
        +LearningOutcomes
    }
}

package "Domain & Infrastructure Layer" {
    interface ISubjectRepository
    class Subject {
        +Content (Dictionary/JSONB)
    }
}

SubjectContentEditorController ..> GetSubjectContentQuery : Creates
SubjectContentEditorController ..> GetSubjectContentQueryHandler : Sends

GetSubjectContentQueryHandler ..> GetSubjectContentQuery : Uses
GetSubjectContentQueryHandler --> ISubjectRepository
GetSubjectContentQueryHandler ..> SyllabusContent : Deserializes & Returns
@enduml