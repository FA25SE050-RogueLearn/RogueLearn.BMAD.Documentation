' get-all-subjects-class.puml
@startuml
skinparam linetype ortho
skinparam ranksep 50
skinparam nodesep 50
skinparam classAttributeIconSize 0
hide empty members

package "API Layer" {
    class SubjectsController {
        +GetAllSubjects(query)
    }
}

package "Application Layer" {
    class GetAllSubjectsQuery {
        +Page
        +PageSize
        +Search
    }

    class GetAllSubjectsHandler {
        +Handle(query)
    }
    
    class PaginatedSubjectsResponse
}

package "Domain & Infrastructure Layer" {
    interface ISubjectRepository
    class Subject
}

SubjectsController ..> GetAllSubjectsQuery : Creates
SubjectsController ..> GetAllSubjectsHandler : Sends

GetAllSubjectsHandler ..> GetAllSubjectsQuery : Uses
GetAllSubjectsHandler --> ISubjectRepository
GetAllSubjectsHandler ..> PaginatedSubjectsResponse : Returns
@enduml