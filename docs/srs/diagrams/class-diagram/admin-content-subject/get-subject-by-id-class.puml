package "API Layer" {
    class SubjectsController {
        +GetSubjectById(id)
    }
}

package "Application Layer" {
    class GetSubjectByIdQuery {
        +Id
    }

    class GetSubjectByIdHandler {
        +Handle(query)
    }
    
