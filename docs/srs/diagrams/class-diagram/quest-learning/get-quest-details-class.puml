' get-quest-details-class.puml
@startuml
skinparam linetype ortho
skinparam ranksep 50
skinparam nodesep 50
skinparam classAttributeIconSize 0
hide empty members

package "API Layer" {
    class QuestsController {
        +GetQuestById(id)
    }
}

package "Application Layer" {
    class GetQuestByIdQuery {
        +Id
    }

    class GetQuestByIdQueryHandler {
        +Handle()
    }
}

package "Domain & Infrastructure Layer" {
    interface IQuestRepository
    interface IQuestStepRepository
    class QuestDetailsDto
}

