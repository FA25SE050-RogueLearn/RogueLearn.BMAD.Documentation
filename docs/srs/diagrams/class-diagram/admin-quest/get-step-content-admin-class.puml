' get-step-content-admin-class.puml
@startuml
skinparam linetype ortho
skinparam ranksep 50
skinparam nodesep 50
skinparam classAttributeIconSize 0
hide empty members

package "API Layer" {
    class AdminQuestStepsController {
        +GetStepContent(id)
    }
}

package "Application Layer" {
    class GetQuestStepContentQuery {
        +QuestStepId
    }

    class GetQuestStepContentQueryHandler {
        +Handle(query)
    }
}

package "Domain & Infrastructure Layer" {
    interface IQuestStepRepository
    class QuestStep {
        +Content (JSONB)
    }
}

AdminQuestStepsController ..> GetQuestStepContentQuery : Creates
AdminQuestStepsController ..> GetQuestStepContentQueryHandler : Sends

GetQuestStepContentQueryHandler ..> GetQuestStepContentQuery : Uses
GetQuestStepContentQueryHandler --> IQuestStepRepository
GetQuestStepContentQueryHandler ..> QuestStep : Reads
@enduml